

<%= form_for @post do |f| %>
    <label>Title: </label>
    <%= f.text_field :title %>
    <br><br>
    <label>Blogger: </label>
    <%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %>
    <br><br>
    <label>Destination: </label>
    <%= f.collection_select(:destination_id, Destination.all, :id, :name) %>
    <br><br>
    <label>Content: </label>
    <%= f.text_area :content %>
    <br><br>
    <%= f.submit %>
<% end %>
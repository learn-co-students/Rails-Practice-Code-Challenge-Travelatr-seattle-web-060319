<h1>Create a New Blogger</h1>

<%= form_for (@blogger) do |f| %>

    <label>Name: </label>
    <%= f.text_field :name %>
    <br>

    <label>Age: </label>
    <%= f.number_field :age %>
    <br>
    
    <label>Bio: (minimum of 30 characters)</label>
    <br>
    <%= f.text_area :bio %>
    <br><br>

    <%= f.submit %>

<% end %>